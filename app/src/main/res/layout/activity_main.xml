            android:layout_marginTop="190sp"
            android:scaleType="fitCenter"
            android:onClick="onClick"
            android:background="@null"
    ></ImageButton>
    <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/magalu"
            android:id="@+id/btMaglu"
            android:layout_marginLeft="220sp"
            android:layout_marginTop="190sp"
            android:scaleType="fitCenter"
            android:onClick="onClick"
            android:background="@null"
    ></ImageButton>
    <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/webmotors"
            android:id="@+id/btWebm"
            android:layout_marginLeft="80sp"
            android:layout_marginTop="310sp"
            android:scaleType="fitCenter"
            android:onClick="onClick"
            android:background="@null"
    ></ImageButton>
    <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/submarino"
            android:id="@+id/btSub"
            android:layout_marginLeft="220sp"
