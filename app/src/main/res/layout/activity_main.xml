    <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/netshoes"
            android:id="@+id/btNetshoes"
            android:layout_marginLeft="80sp"
            android:layout_marginTop="430sp"
            android:scaleType="fitCenter"
            android:onClick="onClick"
            android:background="@null"
    ></ImageButton>
    <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/americanas"
            android:id="@+id/btAmericanas"
            android:layout_marginLeft="220sp"
            android:layout_marginTop="430sp"
            android:scaleType="fitCenter"
            android:onClick="onClick"
            android:background="@null"
    ></ImageButton>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relatorio"
            android:id="@+id/btRelatorio"
            android:textSize="30sp"
            android:layout_marginTop="540sp"
            android:layout_marginLeft="110sp"
    ></Button>

</FrameLayout>